@page
@{

}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card bg-light border-0 shadow-lg rounded-3">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h3 class="text-uppercase mb-0">Kayıt Ol</h3>
                    </div>
                    <form>
                        <div class="form-outline mb-4">
                           <div class="form-outline mb-4">
                                    <input type="text" id="form1Example1" class="form-control form-control-lg" placeholder="Ad soyad" required />
                                    <label class="form-label visually-hidden" for="form1Example1">Ad soyad</label>
                           </div>
                        </div>
                        <div class="form-outline mb-4">
                            <input type="email" id ="form1Example3" class="form-control form-control-lg" placeholder="Email" required />
                            <label class="form-label visually-hidden" for="form1Example3">Email</label>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-outline mb-4">
                                    <input type="password" id="form1Example4" class="form-control form-control-lg" placeholder="Şifre" required />
                                    <label class="form-label visually-hidden" for="form1Example4">Şifre</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-outline mb-4">
                                    <input type="password" id="form1Example5" class="form-control form-control-lg" placeholder="Şifre Doğrulama" required />
                                    <label class="form-label visually-hidden" for="form1Example5">Şifre Doğrulama</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-outline mb-4">
                            <input type="text" id="form1Example6" class="form-control form-control-lg" placeholder="Kullanıcı adı" required />
                            <label class="form-label visually-hidden" for="form1Example6">Kullanıcı adı</label>
                        </div>
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" value="" id="form1Example10" checked required />
                            <label class="form-check-label" for="form1Example10">
                                <a href="#">Hükümlere ve koşullara</a> katılıyorum.
                            </label>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg w-100 default-background-color" >Kayıt Ol</button>
                        </div>
                        <hr class="my-4">
                        <div class="text-center">
                            <p class="mb-0">Already have an account? <a class="text-primary" asp-area="" asp-controller="SignIn" asp-action="SignIn">Sign in</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>